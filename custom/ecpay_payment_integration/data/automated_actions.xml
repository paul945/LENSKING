<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <record id="action_ecpay_payment_success_log" model="base.automation">
            <field name="name">綠界付款成功 - 記錄日誌</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="active" eval="True"/>
            <field name="trigger">on_write</field>
            <field name="filter_domain">[('payment_state', '=', 'paid'), ('payment_auto_registered', '=', True)]</field>
            <field name="filter_pre_domain">[('payment_state', '!=', 'paid')]</field>
            <field name="code">log('綠界自動對帳成功 - 訂單: %s' % record.name)</field>
        </record>

    </data>
</odoo>
