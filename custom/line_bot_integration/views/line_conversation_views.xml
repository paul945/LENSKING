<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 對話記錄 Tree View -->
    <record id="view_line_conversation_tree" model="ir.ui.view">
        <field name="name">line.conversation.tree</field>
        <field name="model">line.conversation</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="create_date"/>
                <field name="line_user_id"/>
                <field name="direction"/>
                <field name="message_type"/>
                <field name="content"/>
                <field name="delivery_status"/>
            </tree>
        </field>
    </record>

    <!-- 對話記錄 Form View -->
    <record id="view_line_conversation_form" model="ir.ui.view">
        <field name="name">line.conversation.form</field>
        <field name="model">line.conversation</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="line_user_id"/>
                            <field name="direction"/>
                            <field name="message_type"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="delivery_status"/>
                            <field name="line_message_id"/>
                            <field name="related_order_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="content" widget="text"/>
                    </group>
                    <group string="錯誤訊息" attrs="{'invisible': [('delivery_status', '!=', 'failed')]}">
                        <field name="error_message" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 對話記錄 Search View -->
    <record id="view_line_conversation_search" model="ir.ui.view">
        <field name="name">line.conversation.search</field>
        <field name="model">line.conversation</field>
        <field name="arch" type="xml">
            <search>
                <field name="line_user_id"/>
                <field name="content"/>
                <separator/>
                <filter string="收到的訊息" name="incoming" domain="[('direction', '=', 'incoming')]"/>
                <filter string="發送的訊息" name="outgoing" domain="[('direction', '=', 'outgoing')]"/>
                <separator/>
                <filter string="文字訊息" name="text" domain="[('message_type', '=', 'text')]"/>
                <filter string="Flex Message" name="flex" domain="[('message_type', '=', 'flex')]"/>
                <separator/>
                <filter string="今天" name="today" domain="[('create_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter string="本週" name="this_week" domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="分組">
                    <filter string="用戶" name="group_user" context="{'group_by': 'line_user_id'}"/>
                    <filter string="方向" name="group_direction" context="{'group_by': 'direction'}"/>
                    <filter string="訊息類型" name="group_type" context="{'group_by': 'message_type'}"/>
                    <filter string="日期" name="group_date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- 對話記錄 Action -->
    <record id="action_line_conversation" model="ir.actions.act_window">
        <field name="name">對話記錄</field>
        <field name="res_model">line.conversation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                尚無對話記錄
            </p>
            <p>
                所有與 LINE 用戶的對話都會記錄在這裡。
            </p>
        </field>
    </record>
</odoo>
